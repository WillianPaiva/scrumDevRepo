package com.example.tests;

import java.util.regex.Pattern;
import java.util.concurrent.TimeUnit;
import org.junit.*;
import static org.junit.Assert.*;
import static org.hamcrest.CoreMatchers.*;
import org.openqa.selenium.*;
import org.openqa.selenium.firefox.FirefoxDriver;
import org.openqa.selenium.support.ui.Select;

public class Baklog {
  private WebDriver driver;
  private String baseUrl;
  private boolean acceptNextAlert = true;
  private StringBuffer verificationErrors = new StringBuffer();

  @Before
  public void setUp() throws Exception {
    driver = new FirefoxDriver();
    baseUrl = "http://localhost:8000/";
    driver.manage().timeouts().implicitlyWait(30, TimeUnit.SECONDS);
  }

  @Test
  public void testBaklog() throws Exception {
    driver.get(baseUrl + "/project/list");
    driver.findElement(By.cssSelector("p.desc")).click();
    driver.findElement(By.xpath("//div[@id='backlog']/div/div/div/div/div/div/div/div[3]/button")).click();
    driver.findElement(By.id("name")).clear();
    driver.findElement(By.id("name")).sendKeys("test");
    driver.findElement(By.cssSelector("div.col-md-2 > #name")).clear();
    driver.findElement(By.cssSelector("div.col-md-2 > #name")).sendKeys("1");
    new Select(driver.findElement(By.cssSelector("select.form-control"))).selectByVisibleText("34");
    driver.findElement(By.cssSelector("div.modal-footer > button.btn.btn-success")).click();
    driver.findElement(By.xpath("//div[@id='backlog']/div/div/div/div[2]/div/div/button")).click();
    driver.findElement(By.xpath("(//input[@id='name'])[3]")).clear();
    driver.findElement(By.xpath("(//input[@id='name'])[3]")).sendKeys("test");
    driver.findElement(By.id("date_begin")).clear();
    driver.findElement(By.id("date_begin")).sendKeys("11/29/2016");
    driver.findElement(By.id("date_estimated")).clear();
    driver.findElement(By.id("date_estimated")).sendKeys("12/07/2016");
    driver.findElement(By.xpath("(//button[@type='button'])[7]")).click();
  }

  @After
  public void tearDown() throws Exception {
    driver.quit();
    String verificationErrorString = verificationErrors.toString();
    if (!"".equals(verificationErrorString)) {
      fail(verificationErrorString);
    }
  }

  private boolean isElementPresent(By by) {
    try {
      driver.findElement(by);
      return true;
    } catch (NoSuchElementException e) {
      return false;
    }
  }

  private boolean isAlertPresent() {
    try {
      driver.switchTo().alert();
      return true;
    } catch (NoAlertPresentException e) {
      return false;
    }
  }

  private String closeAlertAndGetItsText() {
    try {
      Alert alert = driver.switchTo().alert();
      String alertText = alert.getText();
      if (acceptNextAlert) {
        alert.accept();
      } else {
        alert.dismiss();
      }
      return alertText;
    } finally {
      acceptNextAlert = true;
    }
  }
}
